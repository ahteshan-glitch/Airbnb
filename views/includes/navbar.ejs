<style>
  /* Custom Search Bar Styling */
  .search-bar-container {
      position: relative;
      max-width: 600px;
      margin: 0 auto;
  }
  
  .search-input {
      border-radius: 30px;
      padding: 12px 120px 12px 50px !important;
      border: 2px solid #e0e0e0;
      font-size: 1rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      background: #ffffff;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      width: 100%;
  }
  
  .search-input:focus {
      border-color: #6366f1;
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
      outline: none;
  }
  
  .search-button {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      border-radius: 25px;
      padding: 8px 20px;
      background: linear-gradient(135deg, #6366f1, #4f46e5);
      border: none;
      color: white;
      font-weight: 500;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
  }
  
  .search-button:hover {
      transform: translateY(-50%) scale(1.05);
      box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
  }
  
  .search-icon {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #94a3b8;
      pointer-events: none;
  }
  
  /* Animated placeholder */
  .search-input::placeholder {
      color: #94a3b8;
      transition: all 0.3s ease;
  }
  
  .search-input:focus::placeholder {
      transform: translateX(5px);
      opacity: 0.7;
  }
  
  /* Mobile-First Responsive Adjustments */
  @media (max-width: 620px) {
      /* Navbar Container Adjustments */
      .navbar {
          padding: 0.5rem 1rem;
          flex-wrap: nowrap;
      }
  
      /* Compact Brand Logo */
      .navbar-brand {
          margin-right: 0.5rem;
      }
  
      /* Search Bar Optimizations */
      .search-bar-container {
          order: 3;
          width: 100%;
          margin: 0.5rem 0;
          padding: 0;
      }
  
      .search-input {
          padding: 10px 40px 10px 35px;
          font-size: 0.9rem;
      }
  
      .search-button {
          width: 40px;
          padding: 6px;
          display: flex;
          align-items: center;
          justify-content: center;
      }
  
      .search-button span {
          display: none;
      }
  
      .search-icon {
          font-size: 0.9rem;
      }
  
      /* Navigation Items */
      .navbar-nav {
          flex-direction: row;
          align-items: center;
      }
  
      .nav-link {
          font-size: 0.9rem;
          padding: 0.5rem 0.75rem !important;
      }
  
      /* User Section Adjustments */
      .user .nav-link:not([href="/listings/add"]) {
          display: none;
      }
  
      /* Toggler Button Positioning */
      .navbar-toggler {
          order: 2;
          margin-left: auto;
      }
  
      /* Hidden Elements on Mobile */
      .nav-link[href="/listings/add"] {
          display: none;
      }
  }
  
  /* Ultra-Compact Mobile Views (< 400px) */
  @media (max-width: 400px) {
      .navbar {
          padding: 0.5rem;
      }
  
      .search-input {
          padding: 8px 40px 8px 35px !important;
          font-size: 0.85rem;
      }
  
      .search-icon {
          left: 10px;
          font-size: 0.9rem;
      }
  
      .search-button {
          right: 5px;
          padding: 6px;
      }
  
      .navbar-toggler {
          padding: 0.25rem 0.5rem;
      }
  }
  </style>
  
  







